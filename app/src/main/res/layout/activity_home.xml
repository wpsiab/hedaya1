<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myhomeMain1"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_top"
        android:gravity="center|top"
        android:id="@+id/hedayaabId">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/logo_hedaya" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hedayaab2Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:layout_below="@+id/hedayaabId">

        <TextView
            android:id="@+id/quranDoyaId"
            android:layout_width="match_parent"
            android:text="@string/quran_doya"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="#EDA107"
            android:background="@drawable/card_bg"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/card_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hedayaab2Id">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="20dp"
            android:gravity="center"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/introDoyaId"
                android:layout_width="0dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_white"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/intdoya"
                    android:layout_height="match_parent"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="দোয়ার পরিচিতি"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#EDA107"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/insDoyaId"
                android:layout_width="0dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_white"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/insdoya"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="দোয়ার নিয়ম"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#EDA107"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/doyaTimeId"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_white"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/timedoya"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="দোয়ার সময়"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#EDA107"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/sotoDoyaId"
                android:padding="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_white"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/smalldoya"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ছোট দোয়া"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#EDA107"
                    />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/allDoyaId"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_white"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/aldoya"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="সকল দোয়া"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#EDA107"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/monajatId"
                android:padding="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_white"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/prayerdoya"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="মোনাজাত"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#EDA107"
                    />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        app:menu="@menu/menu_layout" />

</RelativeLayout>