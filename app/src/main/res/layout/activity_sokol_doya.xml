<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#E6F4F7"
android:orientation="vertical"
tools:context=".SokolDoyaActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="সকল গুরুত্বপূর্ণ দোয়া সমূহ"
    android:textSize="20dp"
    android:layout_margin="10dp"
    android:textColor="#EDA107"
    android:padding="5dp"
    android:textStyle="bold"
    android:background="@drawable/card_white"
    android:gravity="center"
    />

<ListView
    android:id="@+id/sokolDoyaListViewId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:divider="#E6F4F7"
    android:background="#F6FFFF"
    android:dividerHeight="5dp"
    android:listSelector="#6FCED9" />

</LinearLayout>